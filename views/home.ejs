<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
  <div class="post">
    <h1><%= post.title %></h1>
    <p>
      <% if (post && post.content) { %>
        <%= post.content.substring(0, 100) + " ..." %>
        <a href="/posts/<%= post._id %>">Read More</a>
      <% } else { %>
        No content available.
      <% } %>
    </p>
  </div>
<% }); %>

<%- include("partials/footer"); -%>
